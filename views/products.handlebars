                        divCatP1.appendTo(divCat);
                        divCatP1.text( product_decription);
            let trPrice = $("<tr><td></td></tr>");
                trPrice.appendTo(table);
                    let divCat = $("<div></div>");
                    divCat.appendTo(trPrice);
                    divCat.attr("class", 'productText');
                        let divCatP1 = $("<p></p>");
